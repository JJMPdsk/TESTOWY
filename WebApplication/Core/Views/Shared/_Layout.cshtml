@using Core.Utilities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
@Html.Partial("_NavBar")
<div class="container body-content pt-3">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - @Constants.AppName</p>
    </footer>
</div>

<script src="~/Scripts/authorizeRequest.js"></script>

@* skrypty do walidacji *@
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.overrides.js"></script>
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>